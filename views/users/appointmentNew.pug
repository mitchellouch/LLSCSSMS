extends layouts/main-layout.pug

block content     
    form.studentInfoWrapper(action="/appointment/apptRegister" method="POST")
        h1.heading  #{pageTitle} 
        
        if success == undefined
        else if success == true
            span.successMessage #{message}
        else 
            span.errorMessage #{message}

        .studentRegContainer
            .studentInfoContainer 
                .rowContainer
                    span.label Appointment ID:
                    input.form-control(type="text" name="apptId" required)
                .rowContainer
                    span.label SAIT Student ID:
                    input.form-control(type="text" name="saitId" required)
                .rowContainer
                    span.label Advisor ID:
                    input.form-control(type="text" name="advisorId" required)
                .rowContainer
                    span.label Appointment Type:
                    //input.form-control(type="text" name="academicStatus" readonly)
                    select.form-select.form-control(name="meetingType" value=meetingType)
                        option(selected) Academic
                        option(selected = apptType==="Personal") Personal
                        option(selected = apptType==="Financial") Financial
                .rowContainer
                    span.label Meeting Notes:
                    input.form-control(type="text" name="meetingNotes")
                .rowContainer 
                    span.label Start Date:
                    input.form-control(type="datetime-local" name="startDate" required)
                .rowContainer 
                    span.label End Date:
                    input.form-control(type="datetime-local" name="endDate" required)
            //.commentsContainer
            
        .buttonsContainer.buttonsAlign-right
            input(type="submit" value="Create")
            input(type="reset" value="Reset")

block scripts
    script(src="/js/appointment.js") 
    