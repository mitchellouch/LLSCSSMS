extends layouts/main-layout.pug

block content 

  form.studentInfoWrapper(action="/student/register", method="POST")
    h1.heading  Student Registration

    span.errorMessage #{message}

    .studentRegContainer 
        .studentInfoContainer 
            .rowContainer
                span.label SAIT Student ID:
                input.form-control(type="text", name="saitId", placeholder="ex) 000123456", required)
            .rowContainer
                span.label First Name:
                input.form-control(type="text", name="firstName", required)
            .rowContainer
                span.label Last Name:
                input.form-control(type="text", name="lastName", required)
            .rowContainer
                span.label Contact Phone:
                input.form-control(type="text", name="studentPhone", placeholder="ex) 4037778888")
            .rowContainer
                span.label Contact Email:
                input.form-control(type="email", name="studentEmail")
            .rowContainer
                span.label Personal Email:
                input.form-control(type="email", name="personalEmail")
            .rowContainer
                span.label Academic Status:
                input.form-control(type="text", name="academicStatus")
        .commentsContainer 
            span.label Comments:
            textarea.form-control(name="comments", cols="40", rows="10") 

    .buttonsContainer.buttonsAlign-right
        input(type="submit", value="Register")
        input(type="reset", value="Reset")

//- block scripts
    script(src="/js/studentInfo.js") 
